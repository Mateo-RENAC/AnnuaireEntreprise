<Window x:Class="AnnuaireEntreprise.ManageServicesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gérer les Services" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="ServiceTextBox" Width="200" Margin="0,0,10,0" Text="Nom du service..."/>
            <Button Content="Ajouter" Width="100" Click="OnAddServiceButtonClick"/>
        </StackPanel>
        <ListView x:Name="ServicesListView" Grid.Row="1" Margin="10" SelectionChanged="OnServiceSelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Nom}" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <Button Content="Modifier" Width="100" Margin="0,0,10,0" Click="OnEditServiceButtonClick"/>
            <Button Content="Supprimer" Width="100" Click="OnDeleteServiceButtonClick"/>
        </StackPanel>
    </Grid>
</Window>
