<Window x:Class="AnnuaireEntreprise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Annuaire Entreprise" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Section de recherche -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="SearchTextBox" Width="200" Margin="0,0,10,0" PlaceholderText="Rechercher par nom..."/>
            <ComboBox x:Name="SiteComboBox" Width="150" Margin="0,0,10,0" PlaceholderText="Sélectionner un site"/>
            <ComboBox x:Name="ServiceComboBox" Width="150" PlaceholderText="Sélectionner un service"/>
            <Button Content="Rechercher" Width="100" Margin="10,0,0,0" Click="OnSearchButtonClick"/>
        </StackPanel>

        <Button Content="Gérer les Sites" Width="150" Margin="10" Click="OnManageSitesButtonClick"/>



        <!-- Liste des employés -->
        <ListView x:Name="EmployeesListView" Grid.Row="1" Grid.Column="0" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Nom}" Width="100"/>
                    <GridViewColumn Header="Prénom" DisplayMemberBinding="{Binding Prenom}" Width="100"/>
                    <GridViewColumn Header="Téléphone" DisplayMemberBinding="{Binding TelephoneFixe}" Width="100"/>
                    <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Détails de l'employé sélectionné -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
            <TextBlock Text="Détails de l'employé" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Nom :" FontWeight="Bold"/>
            <TextBlock x:Name="NomTextBlock"/>
            <TextBlock Text="Prénom :" FontWeight="Bold"/>
            <TextBlock x:Name="PrenomTextBlock"/>
            <TextBlock Text="Téléphone Fixe :" FontWeight="Bold"/>
            <TextBlock x:Name="TelephoneFixeTextBlock"/>
            <TextBlock Text="Téléphone Portable :" FontWeight="Bold"/>
            <TextBlock x:Name="TelephonePortableTextBlock"/>
            <TextBlock Text="Email :" FontWeight="Bold"/>
            <TextBlock x:Name="EmailTextBlock"/>
            <TextBlock Text="Service :" FontWeight="Bold"/>
            <TextBlock x:Name="ServiceTextBlock"/>
            <TextBlock Text="Site :" FontWeight="Bold"/>
            <TextBlock x:Name="SiteTextBlock"/>
        </StackPanel>
    </Grid>
</Window>
